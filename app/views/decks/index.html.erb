<p id="notice"><%= notice %></p>

<h1>Leaderboard</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pilot</th>
      <th>Solo score</th>
      <th>Group score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.name %></td>
        <td><%= deck.pilot %></td>
        <td><%= deck.solo_score %></td>
        <td><%= deck.group_score %></td>
        <td><%= link_to 'Show', deck %></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
        <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deck', new_deck_path %>